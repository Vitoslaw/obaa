eventScheme = {
	generic = {
		check = function(self)
			if math.abs(1.5 * math.pi - math.atan2(self.ySpeed,self.xSpeed)) < 0.5 * math.pi then
				eventScheme.generic.fall(self)
			end
		end,

		fall = function(self)
			switch(self.pose.name,{
				fall1 = function(self) self.pose = fall2 end
				fall2 = function(self) self.pose = fall3 end
			})()
		end
	}}
